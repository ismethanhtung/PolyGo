{
  "family": "prod-polygo-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::385003642107:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::385003642107:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "polygo",
      "image": "385003642107.dkr.ecr.ap-southeast-1.amazonaws.com/polygo:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8080,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "POLYGO_HOST",
          "value": "0.0.0.0"
        },
        {
          "name": "POLYGO_PORT",
          "value": "8080"
        },
        {
          "name": "POLYGO_DEBUG",
          "value": "false"
        },
        {
          "name": "POLYGO_PREFORK",
          "value": "false"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/prod-polygo-task",
          "awslogs-region": "ap-southeast-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "wget --no-verbose --tries=1 --spider http://localhost:8080/health || exit 1"
        ],
        "interval": 30,
        "timeout": 3,
        "retries": 3,
        "startPeriod": 5
      }
    }
  ]
}
